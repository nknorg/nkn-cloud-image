{
  "variables": {
    "chain_snapshot_url": "https://nkn.org/ChainDB_pruned_latest.zip",
    "output_name": "nkn-mainnet-{{timestamp}}",
    "do_api_token": "",
    "gc_project_id": "",
    "gc_zone": "",
    "gc_account_file": "",
    "gc_license": "",
    "aws_access_key": "",
    "aws_secret_access_key": "",
    "aws_region": "",
    "azure_client_id": "",
    "azure_client_secret": "",
    "azure_subscription_id": "",
    "azure_tenant_id": "",
    "azure_resource_group_name": "",
    "azure_storage_account": "",
    "docker_repository": ""
  },
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `do_api_token`}}",
      "image": "ubuntu-18-04-x64",
      "region": "sfo2",
      "snapshot_name": "{{user `output_name`}}",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root"
    },
    {
      "type": "googlecompute",
      "account_file": "{{user `gc_account_file`}}",
      "project_id": "{{user `gc_project_id`}}",
      "zone": "{{user `gc_zone`}}",
      "image_name": "{{user `output_name`}}",
      "source_image_family": "ubuntu-1804-lts",
      "disk_size": 25,
      "ssh_username": "packer",
      "image_licenses": ["{{user `gc_license`}}"]
    },
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_access_key`}}",
      "region": "{{user `aws_region`}}",
      "ami_name": "{{user `output_name`}}",
      "instance_type": "t2.small",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 25,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "ssh_username": "ubuntu"
    },
    {
      "type": "azure-arm",
      "client_id": "{{user `azure_client_id`}}",
      "client_secret": "{{user `azure_client_secret`}}",
      "subscription_id": "{{user `azure_subscription_id`}}",
      "tenant_id": "{{user `azure_tenant_id`}}",
      "resource_group_name": "{{user `azure_resource_group_name`}}",
      "storage_account": "{{user `azure_storage_account`}}",
      "capture_container_name": "images",
      "capture_name_prefix": "packer",
      "os_type": "Linux",
      "image_publisher": "Canonical",
      "image_offer": "UbuntuServer",
      "image_sku": "18.04-LTS",
      "location": "West US",
      "vm_size": "Standard_B1s"
    },
    {
      "type": "docker",
      "image": "ubuntu:18.04",
      "commit": true,
      "changes": [
        "WORKDIR /home/nkn/go/src/github.com/nknorg/nkn",
        "ENTRYPOINT /home/nkn/launch_node.sh"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "apt-get update && apt-get -y install sudo || true",
        "sudo apt-get -y install software-properties-common",
        "sudo add-apt-repository -y ppa:longsleep/golang-backports",
        "sudo apt-get update",
        "sudo apt-get -y upgrade",
        "sudo apt-get install -y golang-1.12 git supervisor psmisc zip unzip lsof jq make wget xxd",
        "sudo mkdir -p /home/nkn/go/src/github.com/nknorg/",
        "sudo groupadd nkn",
        "sudo useradd -g nkn -b /home -s /usr/sbin/nologin nkn"
      ]
    },
    {
      "type": "file",
      "source": "./scripts/golang_env.sh",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "./scripts/.bash_profile",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "./scripts/nkn.conf",
      "destination": "/tmp/"
    },
    {
      "type": "file",
      "source": "./scripts/launch_node.sh",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mv /tmp/golang_env.sh /etc/profile.d/",
        "sudo mv /tmp/.bash_profile /home/nkn/",
        "sudo mv /tmp/nkn.conf /etc/supervisor/conf.d/",
        "sudo mv /tmp/launch_node.sh /home/nkn/"
      ]
    },
    {
      "type": "shell",
      "script": "./scripts/build_nkn.sh"
    },
    {
      "type": "shell",
      "environment_vars": ["CHAIN="],
      "inline": [
        "wget {{user `chain_snapshot_url`}} -O /tmp/ChainDB.zip",
        "cd /home/nkn/go/src/github.com/nknorg/nkn/ && sudo -u nkn unzip /tmp/ChainDB.zip && rm /tmp/ChainDB.zip"
      ],
      "except": ["docker"]
    },
    {
      "type": "shell",
      "inline": [
        "sudo rm -f /home/*/.ssh/authorized_keys",
        "sudo rm -f /root/.ssh/authorized_keys"
      ]
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
      ],
      "inline_shebang": "/bin/sh -x",
      "only": ["azure-arm"]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `docker_repository`}}",
        "tag": "{{timestamp}}",
        "only": ["docker"]
      },
      {
        "type": "docker-push",
        "only": ["docker"]
      },
      {
        "type": "docker-tag",
        "repository": "{{user `docker_repository`}}",
        "tag": "latest",
        "only": ["docker"]
      },
      {
        "type": "docker-push",
        "only": ["docker"]
      }
    ]
  ]
}
